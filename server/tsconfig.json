{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node"],
    "lib": ["ES2022"],
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.json"],
  "exclude": ["node_modules", "dist"]
}
